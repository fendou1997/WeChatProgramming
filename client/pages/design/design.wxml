<view class='design-container'>
  <view catchtap='login'>
    <image class='design-img' src="{{logged ? userInfo.avatarUrl : './user-unlogin.png'}}" />
    <image class='avatar-img' src="{{logged ? userInfo.avatarUrl : './user-unlogin.png'}}"></image>
    <view class='head-img-hover'>
      <text>{{userInfo.nickName}}</text>
    </view>
  </view>
  <view class='horizon'></view>
  <view class='fengzhuang' catchtap='designScanCode'>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__hd">
          <image src="/images/design/sys.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">绑定设备</view>
        <view class="weui-cell__ft weui-cell__ft_in-access">{{machineId}}
        </view>

        <image class='arrow' src="/images/music/arrow-right.png"></image>

      </view>

    </view>

  </view>

  <view class="weuicells weui-cells_after-title" catchtap='bluetoothtap'>
    <view class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__hd">
        <image src="/images/design/ly.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
      </view>
      <view class="weui-cell__bd">蓝牙</view>


      <image class='arrow' src="/images/music/arrow-right.png"></image>

    </view>



  </view>
  <view class='fengzhuang1'>
    <view class="weui-cells weui-cells_after-title">
      <navigator url="special-solution/special-solution" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__hd">
          <image src="/images/design/fadz.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">专属方案</view>


        <image class='arrow' src="/images/music/arrow-right.png"></image>

      </navigator>

    </view>

  </view>

  <view catchtap='Phone' class="weuicells weui-cells_after-title">
    <view class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__hd">
        <image src="/images/design/kf.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
      </view>
      <view class="weui-cell__bd">客服</view>
      <view class="weui-cell__ft weui-cell__ft_in-access">18830251060
      </view>

      <image class='arrow' src="/images/music/arrow-right.png"></image>

    </view>



  </view>
  <view class='fengzhuang1'>
    <view class="weui-cells weui-cells_after-title">
      <navigator url="set-up/set-up" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__hd">
          <image src="/images/design/sz.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">设置</view>


        <image class='arrow' src="/images/music/arrow-right.png"></image>

      </navigator>

    </view>

  </view>

  <view class="weuicells weui-cells_after-title">
    <navigator url="Machine-Message/Machine-Message" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__hd">
        <image src="/images/design/ear.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
      </view>
      <view class="weui-cell__bd">设备消息</view>


      <image class='arrow' src="/images/music/arrow-right.png"></image>

    </navigator>
  </view>
  <view class="weui-footer">
    <view class="weui-footer__links">
      <text class="weui-footer__link">邮箱：l775411@163.com</text> 
    </view>
    <view class="weui-footer__text">Copyright © 2018-2020 customizedSound.club</view>
  </view>

</view>